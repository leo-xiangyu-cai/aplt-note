{
  "name": "aplt_notes",
  "version": "1.0.0",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  ],
  "scripts": {
    "build": "tsc --build",
    "start": "npm run build && ts-node-dev ./src/Server.ts",
    "test": "npm run build && NODE_ENV=TEST PORT=7788 jest --silent --no-coverage",
    "test:watch": "NODE_ENV=TEST PORT=7788 jest --watchAll",
    "start:docker": "docker-compose up",
    "test:docker": "docker run --name aplt-notes-test aplt-notes npm run test",
    "update-postman": "tsc && node ./dist/postman/update-collection.js"
  },
  "jest": {
    "verbose": false,
    "collectCoverage": true,
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "roots": [
      "<rootDir>/__tests__"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=6.0.0"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.0",
    "koa": "^2.14.1",
    "koa-bodyparser": "^4.4.0",
    "koa-logger": "^3.2.1",
    "koa-router": "^12.0.0",
    "koa2-cors": "^2.0.6",
    "log4js": "^6.9.1",
    "pg": "^8.11.0",
    "ts-node": "^10.9.1",
    "typeorm": "^0.3.16",
    "typescript": "^5.0.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/koa": "^2.13.5",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-logger": "^3.1.2",
    "@types/koa-router": "^7.4.4",
    "@types/koa2-cors": "^2.0.2",
    "@types/node": "^18.16.18",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "prettier": "^2.8.6",
    "pretty-quick": "^3.1.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3"
  },
  "description": "Appolution Note"
}
